<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
   "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
	<package name="default" extends="json-default">
		<action name="GetNavigationDetails"
			class="com.spring.action.NavigationDetailsAction" method="getNavigationDetails">
			<!-- default method for action is execute() -->
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
			<result name="failure">/error.jsp</result>
		</action>
		<action name="AddNavigationDetails"
			class="com.spring.action.NavigationDetailsAction" method="addNavigationDetails">
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
		</action>
		<action name="EditNavigationDetails"
			class="com.spring.action.NavigationDetailsAction" method="editNavigationDetails">
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
		</action>
		<action name="DeleteNavigationDetails"
			class="com.spring.action.NavigationDetailsAction" method="deleteNavigationDetails">
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
		</action>
		<action name="RunNavigationDetails"
			class="com.spring.action.NavigationDetailsAction" method="runNavigationDetails">
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
		</action>
		<action name="CreateNavigationFile"
			class="com.spring.action.NavigationDetailsAction" method="createNavigationFile">
			<result name="success" type="json">
				<param name ="root">obj</param>
			</result>
		</action>
	</package>
</struts>